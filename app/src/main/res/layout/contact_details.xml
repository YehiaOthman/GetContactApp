<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9C2198F3">
    
    
    <androidx.cardview.widget.CardView
        android:id="@+id/contactUserPicIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:scaleType="fitXY"
            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/ContactNameDetailsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contactUserPicIv"
        android:text="Name : "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ContactNameDetailsTv"
        app:layout_constraintTop_toTopOf="@id/ContactNameDetailsTv"
        android:textSize="25dp"
        />

    <View
        android:id="@+id/viewLine1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/userNameTv"
        android:background="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/ContactNumberDetailsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ContactNameDetailsTv"
        android:text="Number : "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/userNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ContactNumberDetailsTv"
        app:layout_constraintTop_toTopOf="@id/ContactNumberDetailsTv"
        android:textSize="25dp"
        />

    <View
        android:id="@+id/viewLine2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/userNumberTv"
        android:background="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/ContactDscrptionDetailsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userNumberTv"
        android:text="Descrption : "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/userDescrptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ContactDscrptionDetailsTv"
        app:layout_constraintTop_toTopOf="@id/ContactDscrptionDetailsTv"
        android:textSize="25dp"
        />

    <View
        android:id="@+id/viewLine3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/userDescrptionTv"
        android:background="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        />
    
    

</androidx.constraintlayout.widget.ConstraintLayout>